<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-4">
      <%= form_tag(flats_path, :method => "get", id: "search-form", class: "form-inline") do %>
        <%= text_field_tag :search, params[:search], placeholder: "Your next destination", class: "form-control" %>
        <%= submit_tag "Search", :name => nil, class: "btn btn-danger" %>
      <% end %>
    </div>
  </div>
</div>
<br>
<br>
<div class="container">
  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-xs-12 col-sm-3">
        <div class="bg-white center padding1 content_index">
          <br>
          <%= link_to (image_tag flat.picture.url(:medium)), flat  %>
          <p>Description:</p>
          <%= flat.description %>
          <p>Capacity:</p>
          <%= flat.capacity %>
          <p>Country:</p>
          <%= flat.country %>
          <p>Price</p>
          <%= flat.price %>
          <br>
        </div>
        <div id="map" style="width: 100%; height: 600px;"></div>

        <% content_for(:after_js) do %>
          <%= javascript_tag do %>
            $(document).on('ready', function() {
              handler = Gmaps.build('Google');
              handler.buildMap({ internal: { id: 'map' } }, function(){
                markers = handler.addMarkers(<%= raw @markers.to_json %>);
                handler.bounds.extendWith(markers);
                handler.fitMapToBounds();
              });
            })

          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

